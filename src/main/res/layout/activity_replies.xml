<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_product"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mx.edu.utng.orders.RepliesActivity"
    android:background="@color/rojo">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/et_reply_content"
        android:inputType="text"
        android:hint="@string/type_reply_content"
        android:fontFamily="sans-serif-smallcaps"

        android:background="@color/blanco"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:inputType="text"
        android:hint="Type reply date"
        android:layout_below="@+id/et_reply_content"
        android:id="@+id/et_reply_date"
        android:fontFamily="sans-serif-smallcaps"

        android:background="@color/blanco"
        />

    <Button
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/save_replies"
        android:layout_below="@+id/et_reply_date"
        android:id="@+id/bt_save_replies"
        android:background="@color/azul"
        android:textColor="@color/blanco"
        android:textSize="20dp"
        style="@style/Animation.Design.BottomSheetDialog"
        />

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/bt_save_replies"
        android:id="@+id/rv_replies_list"
        android:background="@color/naranjita"
        >

    </android.support.v7.widget.RecyclerView>


</RelativeLayout>
