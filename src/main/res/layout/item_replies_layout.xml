<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv_replies"
    android:background="@color/cardview_light_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/naranja">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/iv_replies"
        android:src="@mipmap/ic_launcher"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="16dp"/>
    <TextView
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_reply_content"
        android:layout_toRightOf="@id/iv_replies"
        android:textSize="15pt"
        android:text="@string/reply_content"
        android:fontFamily="casual"
        android:textColor="@color/colorPrimary1"
        android:textStyle="bold"
        />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_delete_replies"
            android:layout_below="@+id/bt_edit_replies"
            android:layout_toRightOf="@+id/tv_reply_content"
            android:src="@android:drawable/ic_menu_delete"
            android:background="@color/rojo"
            android:layout_marginTop="10dp"

            />
        <TextView
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_reply_date"
            android:layout_toRightOf="@id/iv_replies"
            android:layout_below="@+id/tv_reply_content"
            android:text="@string/reply_date"
            android:textSize="10pt"

            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_edit_replies"
            android:src="@android:drawable/ic_menu_edit"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/tv_reply_content"
            android:layout_toEndOf="@+id/tv_reply_content"
            android:background="@color/colorAccent"
            />

    </RelativeLayout>


</android.support.v7.widget.CardView>